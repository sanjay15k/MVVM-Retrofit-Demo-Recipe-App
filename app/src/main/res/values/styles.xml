<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="SearchViewStyle" parent="AppTheme">
        <item name="android:editTextColor">@color/searchViewTextColor</item>
        <item name="android:hint">@color/searchViewTextColor</item>
        <item name="editTextBackground">@android:color/transparent</item>
        <item name="android:state_focused">false</item>
    </style>

</resources>
