<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="10dp"
    app:cardElevation="1dp"
    android:layout_marginBottom="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/searchRecipePhotoImageView"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:padding="1dp"
            android:src="@drawable/default_recipe_image"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/searchRecipeTitleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="13sp"
                android:letterSpacing="0.05"
                android:textAllCaps="true"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/colorPrimaryDark"
                android:text="Chocolate Nutella Walnut Cake"
                android:padding="10dp"/>

            <ImageButton
                android:id="@+id/showInstructionsImageButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/show_instructions_icon"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>